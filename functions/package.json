    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "private": true
